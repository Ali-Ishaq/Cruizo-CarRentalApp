<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" maxHeight="400.0" maxWidth="750.0" prefHeight="400.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cruizo.controllers.CustomersController">
   <children>
      <VBox alignment="CENTER" maxHeight="400.0" prefHeight="400.0" prefWidth="237.0" spacing="20.0" style="-fx-background-color: white;">
         <children>
            <TextField fx:id="firstNameTextField" promptText="First Name" />
            <TextField fx:id="LastNameTextField" prefHeight="25.0" prefWidth="142.0" promptText="Last Name" />
            <TextField fx:id="ageTextField" promptText="Age" />
            <Button mnemonicParsing="false" onAction="#addUser" prefHeight="25.0" prefWidth="105.0" text="Add User" />
            <Button mnemonicParsing="false" onAction="#switchToHomepage" text="Back" />
         </children>
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
      </VBox>
      <TableView fx:id="UserTable" maxHeight="400.0" prefHeight="400.0" prefWidth="538.0">
        <columns>
          <TableColumn fx:id="firstNameColumn" prefWidth="75.0" text="First Name" />
          <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="Last Name" />
            <TableColumn fx:id="ageColumn" prefWidth="75.0" text="Age" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         
                              </TableView>
   </children>
</HBox>
